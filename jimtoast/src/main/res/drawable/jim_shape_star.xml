<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape android:shape="rectangle">
      <corners android:radius="16dp" />
      <solid android:color="#e0c040" />
    </shape>
  </item>

  <item android:bottom="2dp">
    <shape android:shape="rectangle">
      <corners android:radius="16dp" />
      <gradient
        android:angle="270"
        android:startColor="#e0c040"
        android:centerColor="#e0a020"
        android:endColor="#e08010"
        android:type="linear" />
    </shape>
  </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape android:shape="rectangle">
      <corners android:radius="16dp" />
      <solid android:color="#c040e0" />
    </shape>
  </item>

  <item android:bottom="2dp">
    <shape android:shape="rectangle">
      <corners android:radius="16dp" />
      <gradient
        android:angle="270"
        android:startColor="#c040e0"
        android:centerColor="#a020e0"
        android:endColor="#8010e0"
        android:type="linear" />
    </shape>
  </item>

</layer-list>
